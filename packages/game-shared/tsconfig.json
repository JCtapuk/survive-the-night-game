{
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": "../../",
    "paths": {
      "@/*": ["*"],
      "@server/*": ["../game-server/src/*"],
    }
  },
  "references": [
    { "path": "../game-server" }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
