{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"],
      "@shared/*": ["../game-shared/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
, "../game-shared/src/constants.ts"  ],
  "references": [
    {
      "path": "../game-shared"
    }
  ],
  "exclude": ["node_modules"]
}
